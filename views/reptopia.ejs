<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>canvas test</title>
  <script src="javascripts/reptopia/background.js" defer></script>
  <script src="javascripts/reptopia/main.js" defer></script>
  <script src="javascripts/reptopia/slider.js" defer></script>
  <script src="javascripts/reptopia/cage.js"></script>  
  <script src="javascripts/reptopia/eye.js"></script>
  <script src="javascripts/reptopia/object.js"></script>
  <link rel="stylesheet" type="text/css" href="stylesheets/reptopia.css" />
</head>
<body>
  <canvas id="background"></canvas>
  <div id="slides">
    <div id="overflow">
      <div class="inner">
        <input class="slide slide_3" type="button" value="Work" onclick="check(3)">
        <input class="slide slide_1" type="button" value="Creature" onclick="check(1)">
        <input class="slide slide_2" type="button" value="Store" onclick="check(2)">
      </div>
    </div>
  </div>
  <div id="cages">
    <canvas width="1920" height="1080" class="cage" onclick="showCageInfo(0)"></canvas>
    <canvas width="1920" height="1080" class="cage" onclick="showCageInfo(1)"></canvas>
    <canvas width="1920" height="1080" class="cage" onclick="showCageInfo(2)"></canvas>
    <canvas width="1920" height="1080" class="cage" onclick="showCageInfo(3)"></canvas>
    <canvas width="1920" height="1080" class="cage" onclick="showCageInfo(4)"></canvas>
  </div>
  <img id="arrow" style="opacity: 0;" src="images/reptopia/arrow.png" onclick="showSlides()"></img>
</body>
</html>

